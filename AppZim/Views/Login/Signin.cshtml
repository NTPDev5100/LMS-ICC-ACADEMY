<body>
    <style>
        body {
            background: #fff;
        }
        .footer{
            background: #282828;
            color: white;
        }
        .content-auth {
            margin-top: 0;
            min-height: calc(100vh - 46px);
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -webkit-flex-direction: column;
            -ms-flex-direction: column;
            flex-direction: column;
            -webkit-box-pack: center;
            -webkit-justify-content: center;
            -ms-flex-pack: center;
            justify-content: center;
        }

        .calendar__wrapper {
            padding: 30px;
        }

        .calendar {
            text-align: center;
            font-weight: bold;
        }

            .calendar > .fulldate {
                font-size: 24px;
                ;
                margin: 0;
                line-height: 1;
            }

            .calendar > .date {
                font-size: 160px;
                line-height: 1;
                margin-bottom: 0;
                color: #1b93c4;
            }

            .calendar > .time {
                font-size: 60px;
                margin: 0;
                line-height: 1;
            }

        @@media screen and (max-width:992px) {
            .calendar__wrapper {
                padding: 30px 0;
            }
        }

        @@media screen and (max-width:768px) {
            .calendar__wrapper {
                padding: 30px 0 0;
                order: 2;
            }

            .sign-wrapper {
                width: 100%;
                padding: 0;
                order: 1;
            }
        }

        .btn-brand-02 {
            background-color: #01a42f;
            border-color: #01a42f;
        }

        .calendar > .date {
            color: #01a42f;
        }

        .btn-brand-02:hover, .btn-brand-02:focus {
            background-color: #ffdf7b;
            border-color: #ffdf7b;
        }
        .singin-logo {
            max-width: 200px;
            display: block;
            margin: auto;
        }
        .form-group {
            margin-bottom: 10px;
        }
        .slogan {
            margin-top: 50px;
            font-weight: 400;
            color: white;
        }
        .slogan p:nth-child(1){
            font-style: italic;
            margin-bottom: 0;
        }
            .slogan p:nth-child(2) {
                font-weight: bold;
            }
        .form-control {
            color: #1b2e4b;
            font-size: inherit;
            border-radius: 20px;
            padding: 0 20px;
            border: 1px solid #01a42f;
        }
        body {
            background-image: url('../../app-assets/images/gioi-thieu-2.jpg');
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }
        .sign-wrapper {
            padding-top: 0px;
            background: white;
            height: 100vh;
            position: relative
        }
/*        .sign-wrapper::after{
            position: absolute;
            left: 100%;
            top: 0;
            content:'';
            width: 100vw;
            height: 100%;
            background: white;
        }*/
        .content-auth{
            padding: 0
        }
        .container{
            padding: 0;
            max-width: 100%;
        }
        .singin-logo{
            max-width: 300px;
            margin-top: 100px;
            margin-bottom: 30px;
        }
        @@media screen and (max-width: 1500px){
            .singin-logo {
