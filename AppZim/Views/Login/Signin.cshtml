    <div class="content content-fixed content-auth ">
        <div class="container">
            <div class="media align-items-stretch justify-content-center ht-100p pos-relative flex-wrap login-container-wrap">
                <div class="calendar__wrapper flex-1" style="display: flex;align-items: center;justify-content: center;">
                    <div class="calendar">
                        <p class="js-fulldate fulldate" id="js-fulldate" style="color: white;font-size: 62px"></p>
                        <p class="js-date date" id="js-date" style="padding-top: 10px;padding-bottom: 10px;font-size: 80px" ></p>
                        <p class="js-time time" id="js-time"  style="font-size: 52px; background: white;padding: 10px 20px;display: inline-block; border-radius: 15px; color: #01a42f" ></p>
                        <div class="slogan tx-center" style="text-align: right">
                            @Html.Raw(IdiomsTable.getone().Idioms)
                        </div>
                    </div>
                </div><!-- media-body -->
                <div class="sign-wrapper pd-30" style="padding-top: 0px; height: calc(100vh - 46px);">
                    <div class="wd-100p">
                        <img class="singin-logo" src="~/app-assets/images/favicon.png" />
                        <p class="tx-color-03 tx-16" style="color: red">Chào mừng bạn đã trở lại. Đăng nhập để tiếp tục!</p>
                        @using (Html.BeginForm("Signin", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label style="font-weight: 600">Tên đăng nhập</label>
                                <input type="text" name="txt-username" required class="form-control" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <div class="d-flex justify-content-between mg-b-5">
                                    <label class="mg-b-0-f" style="font-weight: 600">Mật khẩu</label>
                                </div>
                                <input type="password" name="txt-password" class="form-control" placeholder="Enter your password">
                            </div>
                            <div class="form-group">
                                <div class="d-flex justify-content-between mg-b-5">
                                    <a href="@Url.Action("ForgotPassword", "Login", new { area = "" })" class="tx-13">Quên mật khẩu?</a>
                                </div>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "text-align: center; color:red;" })
                            <button type="submit" class="btn btn-brand-02 btn-block" style="text-transform: uppercase; border-radius: 20px;line-height: 20px">Đăng nhập</button>
                        }
                    </div>
                </div><!-- sign-wrapper -->
            </div><!-- media -->

        </div><!-- container -->
    </div><!-- content -->
    <footer class="footer">
        <div style="margin:auto;">
            <span>&copy; <span id="js-current-year"></span><a href="#" style="color: white"> ICC ACADEMY</a> </span>
            <span>
                
            </span>
        </div>
        <div>
