    <script>

        (function () {
            'use strict';
            const todayDayName = document.getElementById("js-fulldate");
            const todayDate = document.getElementById("js-date");
            const todayTime = document.getElementById("js-time");

            let interval = setInterval(function () {
                const currentDate = new Date();
                todayDayName.textContent = currentDate.toLocaleString("en-US", {
                    month: "long",
                    year: "numeric"
                });
                const pad = (n) => n >= 10 ? n : '0' + n;
                todayDate.textContent = currentDate.getDate();
                todayTime.textContent = `${pad(currentDate.getHours())} : ${pad(currentDate.getMinutes())} : ${pad(currentDate.getSeconds()) }`;
                const footerYear = document.getElementById("js-current-year");
                footerYear.textContent = currentDate.getFullYear();
            }, 100);

        })();
    </script>
