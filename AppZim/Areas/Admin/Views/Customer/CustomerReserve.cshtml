        $('#txt-price-left').val('');
        $('#txt-paid').val('');
        $('#txt-date-left').val('');

        $('#txt-deposit').val(accounting.formatNumber($(this).attr('data-deposit')));
    })
    $(document).on("click", ".close-app", function () {
        $('#hdfCloseAppointID').val($(this).attr('data-id'));
        $('#txt-hoc-vien-huy').val($(this).attr('data-name'));
        $('#txt-hoc-vien-huy-phone').val($(this).attr('data-phone'));
