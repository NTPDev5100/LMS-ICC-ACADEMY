@section myScripts
{
    <script>
        $('input[name=search]').keyup(function (event) {
            if (event.keyCode === 13) {
                pagesearch();
            }
        });

        $('.btn-search').click(function () {
            pagesearch();
        })
        function pagesearch() {
            $('#form-search').submit();
        }

        $('.btn-add').click(function () {
            if (ckstring($('input[name=txt-EmployeeName]').val())) {
                toast.create({
                    title: 'Thông báo!',
                    text: 'Vui lòng nhập tên phòng ban!',
                    icon: 'error_outline',
                    classBackground: 'noti-error',
                    timeout: 2500
                });
                $('input[name=txt-EmployeeName]').focus();
                return;
            }
            $('#form-add').submit();
            $(this).attr('disabled', true);
        });
        $('.btn-update').click(function () {
            if (ckstring($('input[name=txt-edit-EmployeeName]').val())) {
                toast.create({
                    title: 'Thông báo!',
                    text: 'Vui lòng nhập tên phòng ban!',
                    icon: 'error_outline',
                    classBackground: 'noti-error',
                    timeout: 2500
                });
                $('input[name=txt-edit-EmployeeName]').focus();
                return;
            }
            $('#form-update').submit();
            $(this).attr('disabled', true);
        });
        //Load chi tiết phòng ban
        function EditDepartment(ID) {
            $.ajax({
                type: "POST",
                url: "/Course/LoadDepartmentDetail",
                data: '{ID: "' + ID + '"}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (msg) {
                    if (msg.rs) {
                        $('input[name=hdfiled]').val(msg.l.ID);
                        $('input[name=txt-edit-EmployeeName]').val(msg.l.EmployeeName);

                        $('input[name=chk-hide]').prop('checked', msg.l.IsHide);
                        $('input[name=hdfStatus]').val(msg.l.IsHide);
                    }
                },
                error: function (xmlhttprequest, textstatus, errorthrow) {
                    alert('Lỗi tải dữ liệu, liên hệ người quản trị');
                }
            });
        }
        //Check Hide
        $('input[name="chk-hide"]').on('click', function () {
            if ($(this).prop('checked') == true) {
                $('input[name="hdfStatus"]').val('true');
            } else {
                $('input[name="hdfStatus"]').val('false');
            }
        });
    </script>
}







